<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110sp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_produto_imagem"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:src="@drawable/bolacha_bono" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_produto_descricao"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="Bolacha Bono 200 g"
            android:textSize="20sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_produto_validade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20/07/2018"
            android:textSize="20sp"
            android:textColor="#000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/quantidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/item_produto_unidades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="1 unid."
                android:layout_toRightOf="@id/quantidade"
                android:layout_marginLeft="15dp"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/item_produto_precoUnitario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/item_produto_unidades"
                android:text="R$ 2,50"
                android:textColor="#000"
                android:textSize="20sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>