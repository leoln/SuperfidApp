<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110sp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_produto_imagem"
        android:layout_width="110dip"
        android:layout_height="match_parent"
        android:src="@drawable/bolacha_bono" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_produto_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Bolacha Recheada Bono"
            android:textColor="#000"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_carrinho_quantidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantidade: 5"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/item_produto_precoUnitario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="R$ 2,50"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_produto_validade"
            android:layout_width="match_parent"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content"
            android:text="Dt. Validade: 20/07/2018"
            android:textColor="#000"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>