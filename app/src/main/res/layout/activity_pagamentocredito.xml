<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="368dp"
    android:layout_height="495dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_numero_cartao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número do Cartão"
        android:inputType="number"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="35dip"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_validade"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:hint="Dt. Validade"
            android:inputType="text"
            android:singleLine="true" />

        <EditText
            android:id="@+id/edt_codigo_seguranca"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:hint="Cód. Segurança"
            android:layout_marginLeft="55dip"
            android:inputType="text"
            android:singleLine="true" />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_nome_titular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome Titular"
        android:layout_marginTop="35dip"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/edt_cpf_titular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CPF"
        android:layout_marginTop="35dip"
        android:inputType="text"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:layout_gravity="center"
        android:text="Pagar"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"/>

</LinearLayout>
